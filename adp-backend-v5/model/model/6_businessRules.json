{
  "models": {
    "businessRules": {
      "type": "Schema",
      "fullName": "Business Rules",
      "actions": {
        "fields": {
          "update": {
            "permissions": "accessAsUser"
          },
          "delete": {
            "permissions": "accessAsUser"
          },
          "clone": {
            "permissions": "accessAsUser"
          },
          "view": {
            "permissions": "accessAsUser"
          },
          "create": {
            "permissions": "accessAsUser"
          },
          "rulesEditor": {
            "fullName": "Rules editor",
            "description": "View/Edit DMN diagram",
            "backgroundColor": "#333300",
            "borderColor": "#666600",
            "textColor": "yellow",
            "icon": {
              "link": "sitemap"
            },
            "action": {
              "type": "link",
              "link": "/#/dmnRulesEditor/:_id"
            },
            "permissions": "accessAsUser"
          },
          "runRules": {
            "permissions": "accessAsUser",
            "showInTable": true,
            "icon": {
              "link": "play"
            },
            "backgroundColor": "#660",
            "borderColor": "#330",
            "textColor": "yellow",
            "fullName": "Rules Runner",
            "description": "Run this ruleset",
            "action": {
              "type": "action",
              "link": "redirectToBpmRunner",
              "redirectUrl": "/rulesRun"
            }
          }
        }
      },
      "scopes": {
        "own": {
          "permissions": "accessAsUser",
          "where": "{ 'creator._id': { $eq: this.req.user._id } }"
        },
        "admin": {
          "permissions": "accessAsSuperAdmin",
          "where": "{$eq:[1,1]}"
        }
      },
      "fields": {
        "name": {
          "type": "String",
          "fullName": "Name",
          "required": true,
          "unique": true
        },
        "description": {
          "type": "Text",
          "fullName": "Description"
        },
        "definition": {
          "type": "Mixed",
          "fullName": "Definition",
          "showInDatatable": false,
          "showInForm": false
        }
      }
    }
  }
}
