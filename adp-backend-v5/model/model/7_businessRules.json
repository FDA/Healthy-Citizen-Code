          "type": "LookupObjectID",
          "fullName": "Target",
          "required": false,
          "lookup": {
            "table": {
              "datasets": {
                "foreignKey": "_id",
                "label": "name",
                "scopes": {
                  "specialScope": {
                    "permissions": {
                      "view": "accessAsUser"
                    },
                    "where": true
                  }
                }
              }
            }
          },
          "parameters": {
            "enableInCellEditing": true
          },
          "visible": false
        },
        "locked": {
          "type": "Boolean",
          "fullName": "Locked"
        },
