          "type": "LookupObjectID",
          "fullName": "Output Data Mapping",
          "lookup": {
            "table": {
              "dataMappings": {
                "foreignKey": "_id",
                "label": "name",
                "sortBy": {
                  "name": 1
                },
                "scopes": {
                  "ownRecordScope": {
                    "permissions": "accessAsUser",
                    "where": "{$eq: [1,1]}"
                  }
                }
              }
            }
          }
        },
        "outputs": {
          "type": "LookupObjectID",
          "fullName": "Outputs",
          "lookup": {
            "table": {
              "outputs": {
                "foreignKey": "_id",
                "label": "name",
                "sortBy": {
                  "name": 1
                },
                "scopes": {
                  "ownRecordScope": {
                    "permissions": "accessAsUser",
                    "where": "{$eq: [1,1]}"
                  }
                }
