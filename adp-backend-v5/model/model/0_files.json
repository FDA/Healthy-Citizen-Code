{
  "models": {
    "_files": {
      "type": "Schema",
      "fullName": "Files",
      "description": "This collection contains list of files uploaded by users",
      "defaultSortBy": { "createdAt": -1 },
      "fields": {
        "originalName": {
          "type": "String",
          "description": "Original file name",
          "width": 'null'
        },
        "size": {
          "type": "Number",
          "description": "File size in bytes"
        },
        "mimeType": {
          "type": "String",
          "description": "File MIME type",
          "width": 'null'
        },
        "filePath": {
          // cropped version will have filename ending with "_crop"
          "type": "String",
          "visible": false,
          "description": "File path in local filesystem"
        },
        "croppingParameters": {
          "type": "Mixed",
          "visible": false,
          "description": "Cropping parameters as sent by frontend"
        },
        "cropped": {
          "type": "Boolean",
          "description": "If true then there is a cropped version of this file"
        }
      },
      "scopes": {
        "ownRecordScope": {
          "permissions": "accessAsUser",
          "where": "{ 'creator._id': { $eq: this.req.user._id } }"
        }
      },
      "actions": {
        "fields": {
          "update": {
            "permissions": "accessAsUser"
          },
          "upsert": {
            "permissions": "accessAsUser"
          },
          "delete": {
            "permissions": "accessAsUser"
          },
          "clone": {
            "permissions": "accessAsUser"
          },
          "viewDetails": {
            "permissions": "accessAsUser"
          },
          "view": {
            "permissions": "accessAsUser"
          },
          "create": {
            "permissions": "accessAsUser"
          },
          "downloadFile": {
            "fullName": "Download file",
            "description": "Download file",
            "icon": {
              "link": "download"
            },
            "action": {
              "type": "action",
              "link": "downloadFromFilesCollection"
            }
          }
        }
      }
    }
  }
}
