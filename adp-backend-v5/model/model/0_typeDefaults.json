{
  "typeDefaults": {
    "comment": "This file provides defaults for various attributes depending on the field type. One can always override these defaults by providing value directly in the field",
    "fields": {
      "String": {
        "width": 150,
        "searchable": true,
        "transform": ["trim"],
        "autocomplete": "enable",
        "parameters": {
          "enableInCellEditing": true,
          "grouping": {
            "allowGrouping": true,
            "allowExpandGroup": true
          }
        }
      },
      "String[]": {
        "autocomplete": "enable",
        "parameters": {
          "enableInCellEditing": true,
          "grouping": {
            "allowGrouping": true,
            "allowExpandGroup": true
          }
        }
      },
      "LookupObjectID": {
        "autocomplete": "enable"
      },
      "LookupObjectID[]": {
        "autocomplete": "enable"
      },
      "TreeSelector": {
        "autocomplete": "enable"
      },
      "Date": {
        "width": 85
      },
      "Time": {
        "transform": [["time", "null"]]
      },
      "Number": {
        "width": 30,
        "autocomplete": "enable",
        "parameters": {
          "enableInCellEditing": true,
          "grouping": {
            "allowGrouping": true,
            "allowExpandGroup": true
          }
        }
      },
      "Boolean": {
        "width": 20,
        "parameters": {
          "enableInCellEditing": true,
          "grouping": {
            "allowGrouping": true,
            "allowExpandGroup": true
          }
        }
      },
      "ObjectID": {
        "width": 120
      },
      "Schema": {
        "generatorSpecification": [
          {
            "generator": "scgCreatedAtUpdatedAt"
          }
        ],
        "fields": {
          "creator": {
            "type": "ObjectID",
            "fullName": "creator",
            "visible": false,
            "synthesize": "creator",
            "description": "Record Creator",
            "permissions": "accessAsSuperAdmin",
            "index": true,
            "generatorSpecification": {
              "generator": "scgCreator"
            }
          },
          "createdAt": {
            "type": "Date",
            "fullName": "createdAt",
            "visible": false,
            "synthesize": "createdAt",
            "description": "Record Created At",
            "permissions": "accessAsSuperAdmin",
            "index": true
          },
          "updatedAt": {
            "type": "Date",
            "fullName": "updatedAt",
            "visible": false,
            "synthesize": "updatedAt",
            "description": "Record Updated At",
            "permissions": "accessAsSuperAdmin",
            "index": true
          },
          "deletedAt": {
            "type": "Date",
            "fullName": "deletedAt",
            "visible": false,
            "description": "Record Deleted At",
            "permissions": "accessAsSuperAdmin",
            "index": true,
            "generatorSpecification": {
              "generator": "scgDeletedAt"
            }
          }
        },
        "limitReturnedRecords": 1000,
        "scopes": {
          "superAdminScope": {
            "permissions": "accessAsSuperAdmin",
            "where": "true"
          }
        },
        "actions": {
          "width": 160,
          "responsivePriority": -1,
          "fields": {
            "update": {
              "description": "Update record",
              "backgroundColor": "#4CAF50",
              "borderColor": "#388E3C",
              "textColor": "white",
              "icon": {
                "link": "pencil"
              },
              "action": {
                "type": "action",
                "link": "update"
              }
            },
            "delete": {
              "description": "Delete record",
              "backgroundColor": "#F44336",
              "borderColor": "#f32c1e",
              "textColor": "white",
              "icon": {
                "link": "trash-o"
              },
              "action": {
                "type": "action",
                "link": "delete"
              }
            },
            "clone": {
              "description": "Clone record",
              "backgroundColor": "#4CAF50",
              "borderColor": "#388E3C",
              "textColor": "white",
              "icon": {
                "link": "clone"
              },
              "action": {
                "type": "action",
                "link": "clone"
              }
            },
            "viewDetails": {
              "description": "View record details",
              "backgroundColor": "#2196F3",
              "borderColor": "#0c7cd5",
              "textColor": "white",
              "icon": {
                "link": "eye"
              },
              "action": {
                "type": "action",
                "link": "viewDetails"
              }
            },
            "view": {
              "showInTable": false
            },
            "create": {
              "description": "Create record",
              "backgroundColor": "#2196F3",
              "borderColor": "#0c7cd5",
              "textColor": "white",
              "showInTable": false,
              "action": {
                "type": "action",
                "link": "create"
              }
            },
            "upsert": {
              "showInTable": false
            }
          }
        },
        "parameters": {
          "allowColumnReordering": true,
          "allowColumnResizing": true,
          "columnResizingMode": "widget",
          "columnHidingEnabled": true,
          "filterRow": {
            "visible": true
          },
          "columnChooser": {
            "enabled": true,
            "allowSearch": true,
            "mode": "select"
          },
          "columnFixing": {
            "enabled": true
          },
          "stateStoring": {
            "enabled": true,
            "type": "localStorage",
            "storageKey": "storage"
          },
          "pager": {
            "showPageSizeSelector": true,
            "allowedPageSizes": [10, 15, 20]
          },
          "sorting": {
            "mode": "multiple"
          },
          "paging": {
            "pageSize": 10
          },
          "groupPanel": {
            "visible": true
          },
          "export": {
            "enabled": true
          },
          "selection": {
            "selectAllMode": "page",
            "mode": "single"
          },
          "enableInCellEditing": false,
          "hoverStateEnabled": true
        }
      },
      "Password": {
        "width": 60,
        "validate": [
          {
            "validator": "regex",
            "arguments": {
              "regex": "^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%!&^*_\\-]).{8,}$",
              "regexOptions": ""
            },
            "errorMessages": {
              "default": "Password must contain at least one of each: digit 0-9, lowercase character, uppercase character and one special character: @#$%!&^*-_ and be at least 8 characters long"
            }
          }
        ],
        "transform": [["hashPassword", "cleanupPassword"]],
        "autocomplete": "enable",
        "parameters": {
          "enableInCellEditing": true,
          "grouping": {
            "allowGrouping": true,
            "allowExpandGroup": true
          }
        }
      },
      "Email": {
        "width": 150,
        "validate": [
          {
            "validator": "regex",
            "arguments": {
              "regex": "^[a-zA-Z0-9.!#$%&’*+\\/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\\.[a-zA-Z0-9-]+)*$",
              "regexOptions": "i"
            },
            "errorMessages": {
              "default": "Please enter correct email"
            }
          }
        ],
        "autocomplete": "enable",
        "parameters": {
          "enableInCellEditing": true,
          "grouping": {
            "allowGrouping": true,
            "allowExpandGroup": true
          }
        }
      },
      "Url": {
        "width": 150,
        "render": "link",
        "validate": [
          {
            "validator": "regex",
            "arguments": {
              "regex": "^(https?:\\/\\/)?([\\da-z\\.-]+)\\.([a-z\\.]{2,6})([\\/\\w \\.-]*)*\\/?$",
              "regexOptions": "i"
            },
            "errorMessages": {
              "default": "Please enter correct URL"
            }
          }
        ],
        "autocomplete": "enable",
        "parameters": {
          "enableInCellEditing": true,
          "grouping": {
            "allowGrouping": true,
            "allowExpandGroup": true
          }
        }
      },
      "Phone": {
        "width": 80,
        "validate": [
          {
            "validator": "regex",
            "arguments": {
              "regex": "^(\\+1\\s?)?((\\([2-9][0-9]{2}\\))|[2-9][0-9]{2})[\\s\\-]?[2-9][0-9]{2}[\\s\\-]?[0-9]{4}$",
              "regexOptions": "i"
            },
            "errorMessages": {
              "default": "Please provide correct US phone number"
            }
          }
        ],
        "autocomplete": "enable",
        "parameters": {
          "enableInCellEditing": true,
          "grouping": {
            "allowGrouping": true,
            "allowExpandGroup": true
          }
        }
      },
      "Text": {
        "width": 180,
        "autocomplete": "enable",
        "parameters": {
          "enableInCellEditing": true,
          "grouping": {
            "allowGrouping": true,
            "allowExpandGroup": true
          }
        }
      },
      "ImperialHeight": {
        "width": 50,
        "transform": [["heightImperialToMetric", "heightMetricToImperial"]],
        "validate": [
          {
            "validator": "imperialHeightRange",
            "arguments": {
              "from": [0, 1],
              "to": [8, 11]
            },
            "errorMessages": {
              "default": "This height doesn't look reasonable, should be more than 1\" less than 8'11\""
            }
          }
        ]
      },
      "ImperialWeight": {
        "width": 50,
        "transform": ["trim", ["weightImperialToMetric", "weightMetricToImperial"]],
        "validate": ["min(1)", "max(1000)"]
      },
      "ImperialWeightWithOz": {
        "width": 50,
        "transform": ["trim", ["weightImperialWithOzToMetric", "weightMetricToImperialWithOz"]]
      }
    }
  },
