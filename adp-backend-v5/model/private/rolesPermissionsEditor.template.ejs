<style>

    #rp-wrapper {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        display: flex;
        flex-direction: column;
    }

    #rp-header, #rp-footer {
        position: relative;
        flex: 0 0 auto;
    }

    #rp-body {
        position: relative;
        flex: 1 1 auto;
    }

    #rp-grid-container {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
    }

    #rp-grid-container td {
        padding: 6px 10px !important;
    }

    #rp-footer {
        display: flex;
        justify-content: flex-end;
        padding: 14px;
    }

    #rp-footer button {
        margin-left: 2px;
        padding: 0 18px;
        font: 300 15px/29px Open Sans, Helvetica, Arial, sans-serif;
        cursor: pointer;
    }

    #rp-grid-container tr.dx-header-row td.perm-td {
        position: relative;
        padding: 10px 10px !important;
    }

    #rp-grid-container tr.dx-header-row td.perm-td .dx-column-indicators {
        position: absolute;
        top: 8px;
        left: 0;
    }

    #rp-grid-container tr.dx-header-row td.perm-td .dx-datagrid-text-content {
        max-width: 100% !important;
        text-align: center;
    }

    #rp-grid-container tr.dx-header-row td.perm-td:hover .rp-role-actions-dropdown-container {
        display: block;
    }

    #rp-grid-container .rp-role-actions-dropdown-container {
        position: absolute;
        top: 0;
        right: 0;
        z-index: 1000;
        display: none;
    }
</style>
<div id="rp-wrapper">
    <div id="rp-header"><h1>User Roles Editor</h1></div>
    <div id="rp-body">
        <div id="rp-grid-container"></div>
    </div>
    <div id="rp-footer">
        <button
                class="btn adp-action-b-tertiary"
                ng-click="vm.createRole()"
                ng-if="!!vm.createRole"
        >
            New Role
        </button>
        <button id="rp-save-button"
                class="btn adp-action-b-primary"
                ng-disabled="vm.isSaving"
                ng-click="vm.onSave()"
                ng-if="!!vm.onSave"
        >
            {{vm.isSaving ? "Saving...." : "Save"}}
        </button>
    </div>
</div>

